{
    "name": "PhishingForPhish",
    "description": "Prevent phishers from fishing",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup/popup.html"
    }, 
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }, 
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "webRequest",
        "webNavigation",
        "contextMenus",
        "notifications",
        "scripting"
    ], 
    "host_permissions": ["http://127.0.0.1:5000/", "https://*/*", "http://127.0.0.1:5500/"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["popup/popup.css"],
          "js": ["popup/popup.js"], 
          "run_at": "document_idle"
        }
      ]
     
  }